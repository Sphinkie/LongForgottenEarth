<interface>

	<imageset file="../media/gui/Computer.imageset" name="ComputerImagery"></imageset>
	<title></title>

<!-- ********************************************************************* -->

	<mainWin x="0.1" y="0.42" w="0.65" h="0.45" alpha="0.7">
		<image x="0" y="0" w="1" h="1">captain</image>
		<pushbutton  x="0.20" y="0.40" w="0.18" h="0.10" call="showShipLog()">ship log</pushbutton>
		<pushbutton  x="0.26" y="0.68" w="0.18" h="0.10" call="showAlertLog()">alerts log</pushbutton>
		<pushbutton  x="0.44" y="0.28" w="0.18" h="0.10" call="showMissions()">missions</pushbutton>
		<pushbutton  x="0.53" y="0.58" w="0.18" h="0.10" call="showCrewData()">crew</pushbutton>
		<pushbutton  x="0.10" y="0.82" w="0.14" h="0.10" call="exitGUI()">start</pushbutton>
	</mainWin>

<!-- ********************************************************************* -->

	<loginWin x="0.22" y="0.52" w="0.37" h="0.25" frame="yes">
		<text        x="0.05" y="0.05" w="0.90" h="0.15" colour="blue" >Sphinx SpaceShip Captain Computer</text>
		<text        x="0.10" y="0.25" w="0.30" h="0.16" pen="black" background="no" align="left">login:</text>
		<edit        x="0.40" y="0.25" w="0.35" h="0.16" pen="black" background="no" >assimiev</edit>
		<text        x="0.10" y="0.50" w="0.30" h="0.16" pen="black" background="no" align="left">password: </text>
		<edit        x="0.40" y="0.50" w="0.35" h="0.16" pen="black" background="no" ></edit>
		<pushbutton  x="0.65" y="0.80" w="0.25" h="0.16" call="login()">login</pushbutton>
		<pushbutton  x="0.10" y="0.80" w="0.25" h="0.16" call="exitGUI()">quit</pushbutton>
	</loginWin>

